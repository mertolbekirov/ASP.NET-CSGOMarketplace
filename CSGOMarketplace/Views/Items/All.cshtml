@using CSGOMarketplace.Services.Items.Models
@model AllItemsQueryModel

@{
    ViewData["Title"] = "All Cars";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-4">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="M4A4 | Neo-Noir">
        </div>
        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="Sorting"></label>
                <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Price</option>
                    <option value="2">Float</option>
                </select>
            </div>
        </div>
    </div>
</form>

@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalItems / AllItemsQueryModel.ItemsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Cars"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)"><<</a>
    </div>
    <div class="col-md-6">
        <a class="btn btn-primary float-right @(Model.CurrentPage == maxPage ? "disabled" : string.Empty)"
           asp-controller="Cars"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm"
           asp-route-sorting="@((int)Model.Sorting)">>></a>
    </div>
</div>

<div class="row">
    @foreach (var item in Model.Items)
    {
        <div class="col-md-4">
            <div class="card mb-3">
                <img class="card-img-top" src="@item.ImageUrl" alt="@item.Name - @item.Condition">
                <div class="card-body text-center">
                    <h5 class="card-title text-center">@item.Name (@item.Condition)</h5>
                    @if (item.Float != 0)
                    {
                    <p class="card-text">@item.Float:f2</p>
                    }
                    <p class="card-text">$@item.Price</p>
                    <a href="@item.InspectUrl" class="btn btn-warning">Inspect</a>
                    <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Buy</a>
                </div>
            </div>
        </div>
    }
</div>